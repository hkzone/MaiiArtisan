<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Maii artisan patisserie</title>
    <!-- <link rel="shortcut icon" href="/images/favicon.ico"> -->
    <!-- Bootstrap CSS -->

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    
    <link rel="stylesheet" href="/dist/bundle.css" />
    <!-- Font awesome -->
    <script
      defer
      src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"
    ></script>
  </head>

  <body>

    <!-- Nav Bar -->
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark" id="main__navbar">
      <div class="container-xl">
      <a class="navbar-brand" href="/">Maii Artisan Patisserie</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/#story">Our story</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/#products">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/#contact">Contact</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/#testemonials">Testemonials</a>
          </li>
           <li class="nav-item">
            <a class="nav-link" href="/shop">Shop</a>
          </li>
          </ul>
          <ul class="navbar-nav ml-auto align-items-center">
          <li class="nav-item d-flex flex-column justify-content-center cart">
            
              <a class="nav-link  d-flex align-items-center" href="/cart">
                <!-- <i class="fas fa-cart-arrow-down"></i> -->
                <span class="position-relative">
                <svg viewBox="0 0 28 28">
                  <path fill="none" d="M7.24,9.5H20.77A2,2,0,0,1,22.7,11l3.23,12h0A2,2,0,0,1,24,25.5H4A2,2,0,0,1,2.07,23L5.31,11h0A2,2,0,0,1,7.24,9.5Z"/>
                  <path fill="none" d="M12.31,3.5h3.42a2,2,0,0,1,1.92,1.43L19,9.5H9l1.39-4.58h0A2,2,0,0,1,12.31,3.5Z"/>
                  </svg>
                   <span class="quantity"><%= typeof cartQty!== undefined && cartQty>0 ?` ${cartQty}`:' 0' %></span>
                </span>
                   <span class="d-lg-none ml-2">Cart</span>
                </a>  

   
            
            
           </li>
          <% if (user && user!==undefined){ %>

            <li class="nav-item nav__el nav__el--logout">
              <a class="nav-link" href="#">Logout</a>
            </li>
            <li class="nav-item nav__el" ></a>
              <a class="nav-link" href="/me">
              <img class="nav__user-img" src="/images/users/<%=user.photo%>" alt="Photo of <%=user.name%>"/>
             <%-user.name.split(' ')[0]-%>
            </a>
            </li>
         <%  }else{   %>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/signup">Sign up</a>
          </li>
        <%  }  %>
        </ul>
      </div>
      </div>
    </nav>
