<%- include("./_header") -%>
<main class="main">
  <div class="user-view container-xl orders-container">
    <!--  Side Nav-->
    <div class="row d-flex title-div">
      <div class="col-md-3"><%- include("./_nav") -%></div>
      <!-- End  Side Nav-->

      <div class="col-md-9 user-view__content">
        <div class="account-products-container"></div>
        <h2 class="heading-secondary ma-bt-md">All Orders</h2>
        <% if(orders.length > 0) { %>
        <div class="col-lg-12">
          <form
            class="form form-inline align-items-end mb-2 needs-validation"
            novalidate
          >
            <!-------------- DATE -------------->
            <div class="d-flex flex-column mr-sm-2">
              <label for="date">Date </label>
              <input
                type="date"
                name="date"
                id="due-date"
                class="form-control"
              />
              <span class="validity"></span>
              <div class="invalid-feedback">Please select a valid date.</div>
            </div>

            <div class="d-flex flex-column mr-sm-2">
              <label for="is-ready">Readiness</label>
              <select class="custom-select" name="is-ready" id="is-ready">
                <option value="">Choose...</option>
                <option>Ready</option>
                <option>Not ready</option>
              </select>
            </div>
            <div class="d-flex flex-column mr-sm-2">
              <label for="is-delivered">Delivery</label>
              <select
                class="custom-select"
                name="is-delivered"
                id="is-delivered"
              >
                <option value="">Choose...</option>
                <option>Delivered</option>
                <option>Not delivered</option>
              </select>
            </div>
            <div class="d-flex flex-column mr-sm-2">
              <label for="is-paid">Payment</label>
              <select class="custom-select" name="is-paid" id="is-paid">
                <option value="">Choose...</option>
                <option>Paid</option>
                <option>Unpaid</option>
              </select>
            </div>
            <button
              id="filter-orders"
              type="submit"
              class="btn btn-default pull-left mr-sm-2"
            >
              <i class="fas fa-sync"></i> Update
            </button>
          </form>
          <!-- Orders table -->
          <div class="table-responsive admin-orders-table">
          <!-- End  Order Table-->
        </div>
        <% } else { %>
        <div
          class="d-flex h-100 w-100 align-items-center justify-content-center"
        >
          <p class="text-muted">No orders yet.</p>
        </div>

        <% } %>
      </div>
    </div>
  </div>
</main>

<%- include("./_footer") -%>
