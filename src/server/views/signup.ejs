<%- include("./_header") -%>
<main class="main signup-container">
  <div class="container-xl">
    <div class="form-row">
      <div class="col-md-5 signup__left-panel rounded-left">
        <div>
          <h2>Sign up:</h2>
          <h4>For the treats you always wanted</h4>
        </div>
      </div>

      <div class="col-md-7 signup__right-panel rounded-right">
        <h2>Maii Artisan Patisserie</h2>
        <h4>Welcome to the world of pâtisserie</h4>
        <hr />

        <form class="form signup-form needs-validation" novalidate>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputName">Name:</label>
              <input
                class="form-control"
                type="text"
                name="inputName"
                value=""
                id="name"
                required
              />
              <div class="invalid-feedback">Please enter your name</div>
            </div>
            <div class="form-group col-md-6">
              <label for="inputEmail">E-mail:</label>
              <input
                class="form-control"
                type="email"
                name="inputEmail"
                value=""
                id="email"
                required
              />
              <div class="invalid-feedback">Please enter a valid e-mail</div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="password">Password:</label>
              <input
                class="form-control"
                type="password"
                value=""
                id="password"
                placeholder="••••••••"
                required
                minlength="8"
              />
              <div class="invalid-feedback">
                Password must be at least 8 characters
              </div>
            </div>
            <div class="form-group col-md-6">
              <label for="passwordConfirm">Re-enter password:</label>
              <input
                class="form-control"
                type="password"
                value=""
                id="passwordConfirm"
                placeholder="••••••••"
                required
                minlength="8"
              />
              <div class="invalid-feedback">
                Password must be at least 8 characters
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="unit">Unit (Appartment) </label>
              <input
                type="text"
                class="form-control"
                id="unit"
                placeholder="optional"
              />
            </div>
            <div class="form-group col-md-6">
              <label for="floorNo">Floor No</label>
              <input
                type="text"
                class="form-control"
                id="floorNo"
                placeholder="optional"
              />
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-5">
              <label for="blockNo">Block or Tower No</label>
              <input
                type="text"
                class="form-control"
                id="blockNo"
                placeholder="optional"
              />
            </div>
            <div class="form-group col-md-7">
              <label for=" buildingName">Building Name</label>
              <input
                type="text"
                class="form-control"
                id="buildingName"
                placeholder="optional"
              />
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="estateOrVillageName">Estate or Village name</label>
              <input
                type="text"
                class="form-control"
                id="estateOrVillageName"
                placeholder=""
                required
              />
              <div class="invalid-feedback">
                Please provide a valid estate or village name
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="buildingNo">Building No </label>
              <input
                type="text"
                class="form-control"
                id="buildingNo"
                placeholder=""
                required
              />
              <div class="invalid-feedback">Please enter a building No</div>
            </div>
            <div class="form-group col-md-8">
              <label for="streetName">Street name</label>
              <input
                type="text"
                class="form-control"
                id="streetName"
                placeholder=""
                required
              />
              <div class="invalid-feedback">Please enter a street name</div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-7">
              <label for="district">District</label>
              <select
                class="custom-select d-block w-100"
                id="district"
                required
              >
                <option value="">Choose...</option>
                <% district.forEach(el=>{ %>
                <option><%=el%></option>
                <%})%>
              </select>
              <div class="invalid-feedback">
                Please select a valid district.
              </div>
            </div>
            <div class="form-group col-md-5">
              <label for="region">Region</label>
              <select class="custom-select d-block w-100" id="region" required>
                <option value="">Choose...</option>
                <% region.forEach(el=>{ %>
                <option><%=el%></option>
                <%})%>
              </select>
              <div class="invalid-feedback">Please provide a valid region.</div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="phoneNumber">Mobile Phone Number</label>
              <input type="text" class="form-control" id="phoneNumber"
              placeholder="" required=>
              <div class="invalid-feedback">Phone Number is required.</div>
            </div>
          </div>

          <div class="form-group form-check text-left">
            <input
              class="form-check-input"
              type="checkbox"
              id="inputCheck"
              value=""
            />
            <label class="form-check-label" for="inputCheck"
              >I'd like to receive a newsletters</label
            >
          </div>
          <hr />

          <div class="form-row align-items-center">
            <div class="form-group col-sm-5">
              <button class="btn btn-dark signup__button">Sign Up Now</button>
            </div>
            <div class="form-group col-sm-7 align-items-center">
              <a href="/login">I'm already a member</a>
            </div>
          </div>
        </form>

        <!-- <hr /> -->

        <!-- <section id="signup__connect-section">
          <div class="form-row">
            <div class="col-sm">
              or connect with -
              <i class="signup__icon fab fa-facebook-f"></i>
              <i class="signup__icon fab fa-google"></i>
              <i class="signup__icon fab fa-apple"></i>
              <!-- <hr class="signup__hr-2"> -->
        <!-- </div>
          </div>
        </section>  -->
      </div>
    </div>
  </div>
</main>
<%- include("./_footer") -%>
