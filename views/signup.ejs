      <div class="col-md-5 col-sm-6 signup__left-panel">
        <h2 class="signup__sign-txt signup__pitch-txt">Sign up:</h2>
        <h4 class="signup__pitch-txt">For the treats you always wanted</h4>

        <img class="signup__responsive-img signup-img rounded-left" src="images/pexels-pavel-danilyuk-7180723.jpg" alt="Photo by cottonbro from Pexels">
      </div>

      <div class="col-md-7 signup__right-panel row-eq-height rounded-right">
        <p class="signup__brand">
          <!-- <i class="fas fa-ellipsis-v"></i><i class="fas fa-ellipsis-v"></i> -->
          Moi du Artisan
        </p>
        <h4 class="signup__pitch-txt2">Welcome to the world of p√¢tisserie</h4>



        <section id="signup__form-section">


          <form class="form signup__form">

            <div class="form-group signup__form-group row">
              <div class="col-md-6 mb-3">
                <label class="" for="inputName">Name:</label>
                <input class="form-control" type="text" name="inputName" value="" id="name">
              </div>
              <div class="col-md-6 mb-3">
                <label class="" for="inputEmail">E-mail:</label>
                <input class="form-control" type="email" name="inputEmail" value="" id="email">
              </div>
            </div>



            <div class="form-group signup__form-group row">
              <div class="col-md-6 mb-3">
                <label class="" for="password">Password:</label>
                <input class="form-control" type="password" value="" id="password">
              </div>
              <div class="col-md-6 mb-3">
                <label class="" for="passwordConfirm">Re-enter password:</label>
                <input class="form-control" type="password" value="" id="passwordConfirm">
              </div>

            </div>


            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="unit">Unit (Appartment) </label>
                <input type="text" class="form-control" id="unit" placeholder="Unit (Appartment) ">
              </div>
              <div class="col-md-6 mb-3">
                <label for="floorNo">Floor No</label>
                <input type="text" class="form-control" id="floorNo" placeholder="Floor No">
              </div>


            </div>

            <div class="row">
              <div class="col-md-5 mb-3">
                <label for="blockNo">Block or Tower No</label>
                <input type="text" class="form-control" id="blockNo" placeholder="Block or Tower No">
              </div>
              <div class="col-md-7 mb-3">
                <label for=" buildingName">Building Name<span class="text-muted">(Optional)</span></label>
                <input type="text" class="form-control" id="buildingName" placeholder="Building Name">
              </div>


            </div>

            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="estateOrVillageName">Estate or Village name</label>
                <input type="text" class="form-control" id="estateOrVillageName" placeholder="Estate or Village name">
              </div>
            </div>

            <div class="row">
              <div class="col-md-4 mb-3">
                <label for="buildingNo">Building No </label>
                <input type="text" class="form-control" id="buildingNo" placeholder="Building No">
              </div>
              <div class="col-md-8 mb-3">
                <label for="streetName">Street name</label>
                <input type="text" class="form-control" id="streetName" placeholder="Street Name">
              </div>

            </div>


            <div class="row">
              <div class="col-md-7 mb-3">
                <label for="district">District</label>
                <select class="custom-select d-block w-100" id="district" required="">
                  <option value="">Choose...</option>
                  <% district.forEach(el=>{ %>
                  <option><%=el%></option>
                  <%})%>
                </select>
                <div class="invalid-feedback">
                  Please select a valid district.
                </div>
              </div>
              <div class="col-md-5 mb-3">
                <label for="region">Region</label>
                <select class="custom-select d-block w-100" id="region" required="">
                  <option value="">Choose...</option>
                  <% region.forEach(el=>{ %>
                  <option><%=el%></option>
                  <%})%>

                </select>
                <div class="invalid-feedback">
                  Please provide a valid region.
                </div>
              </div>

            </div>

            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="phoneNumber">Mobile Phone Number</label>
                <input type="text" class="form-control" id="phoneNumber" placeholder="" required="">
                <div class="invalid-feedback">
                  Zip code required.
                </div>
              </div>

              <div class="form-group signup__form-group row">
                <div class="col-sm-12">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="inputCheck" value="">
                    <label class="form-check-label signup__newsletters-txt" for="inputCheck">I'd like to receive a newsletters</label>
                  </div>
                </div>
              </div>
        </section>
        <section id="signup__button-section">
          <div class="form-group row">
            <div class="col-sm-5">
              <button type="submit" class="btn btn-light signup__button" name="button">Sign Up Now</button>
            </div>
            <div class="col-sm-6 d-flex align-items-center"><a class="signup__login-member" href="/login">I'm already a member</a></div>
          </div>
          </form>

        </section>

        <hr class="signup__hr">

        <section id="signup__connect-section">


          <div class="row">
            <div class="col-sm">or connect with -
              <i class="signup__icon fab fa-facebook-f"></i>
              <i class="signup__icon fab fa-google"></i>
              <i class="signup__icon fab fa-apple"></i>
              <!-- <hr class="signup__hr-2"> -->
            </div>



          </div>

        </section>
      </div>
    </div>

  </div>
</main>
